{
  "name": "@comicogs/backend",
  "version": "2.0.0",
  "description": "Comicogs Backend - Express.js API with Prisma",
  "private": true,
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "npx tsc",
    "start": "node dist/server.js",
    "worker": "tsx watch src/worker/index.ts",
    "alerts:trigger": "tsx src/scripts/triggerAlerts.ts",
    "backup": "tsx src/scripts/backup.ts",
    "restore": "tsx src/scripts/restore.ts",
    "golden:generate": "tsx src/scripts/goldenDataset.ts",
    "test:golden": "tsx src/scripts/apiAssertions.ts",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "type-check": "npx tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "db:setup": "prisma generate",
    "db:migrate": "prisma migrate dev --name init",
    "db:seed": "npx tsx prisma/seed.ts",
    "db:seed:e2e": "npx tsx prisma/seed.e2e.ts",
    "db:reset": "prisma migrate reset --force --skip-seed",
    "db:fresh": "npm run db:reset && npm run db:seed",
    "db:studio": "prisma studio"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.645.0",
    "@prisma/client": "^6.1.0",
    "axios": "^1.7.4",
    "bcryptjs": "^2.4.3",
    "bullmq": "^5.8.3",
    "cors": "^2.8.5",
    "express": "^4.21.2",
    "express-rate-limit": "^7.5.1",
    "helmet": "^8.1.0",
    "ioredis": "^5.4.1",
    "jsonwebtoken": "^9.0.2",
    "papaparse": "^5.4.1",
    "pino": "^9.9.0",
    "pino-pretty": "^13.1.1",
    "prom-client": "^15.1.3",
    "resend": "^4.0.0",
    "stripe": "^17.5.0",
    "zod": "^4.1.5"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/node": "^20.0.0",
    "@types/papaparse": "^5.3.14",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^8.41.0",
    "@typescript-eslint/parser": "^8.41.0",
    "eslint": "^9.34.0",
    "jest": "^29.7.0",
    "prisma": "^6.1.0",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "tsx": "^4.19.2",
    "typescript": "^5.0.0"
  }
}
