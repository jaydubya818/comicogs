# Environment Variables Template
# Copy this file to .env and fill in your values

# Database - Use your production database URL
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/comicogs"

# NextJS
NEXT_TELEMETRY_DISABLED=1
NEXT_PUBLIC_API_URL="https://comicogs-01.vercel.app/api"

# Authentication - Generate secure secrets for production
NEXTAUTH_SECRET="your-nextauth-secret-here"
NEXTAUTH_URL="https://comicogs-01.vercel.app"
JWT_SECRET="your-super-secret-jwt-key-here"

# OAuth Providers (optional)
GOOGLE_CLIENT_ID=""
GOOGLE_CLIENT_SECRET=""
GITHUB_CLIENT_ID=""
GITHUB_CLIENT_SECRET=""

# Stripe Payment Processing
STRIPE_PUBLISHABLE_KEY=""
STRIPE_SECRET_KEY=""
STRIPE_WEBHOOK_SECRET=""

# Image Upload (optional)
NEXT_PUBLIC_CLOUDINARY_CLOUD_NAME=""
CLOUDINARY_API_KEY=""
CLOUDINARY_API_SECRET=""

# External Comic APIs (optional)
COMIC_VINE_API_KEY=""
MARVEL_API_KEY=""
MARVEL_PRIVATE_KEY=""

# Email (optional)
SMTP_HOST=""
SMTP_PORT=587
SMTP_USER=""
SMTP_PASSWORD=""

# Monitoring (optional)
SENTRY_DSN=""
VERCEL_ANALYTICS_ID=""

# Redis (optional)
REDIS_URL="redis://localhost:6379"

# Environment
NODE_ENV="production"
PORT=3000
API_PORT=4000

# CORS
CORS_ORIGIN="https://comicogs-01.vercel.app"

# Feature Flags (set to "off" to disable)
FLAG_PAYMENTS=""
FLAG_SEARCH=""
FLAG_EMAIL=""
FLAG_UPLOADS=""
FLAG_EXPORTS=""
FLAG_IMPORTS=""
FLAG_ALERTS=""
FLAG_WANTLIST=""

# Feature Flag Debug (set to "true" in development)
EXPOSE_FEATURE_FLAGS="false"
