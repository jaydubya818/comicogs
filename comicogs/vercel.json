{
  "version": 2,
  "buildCommand": "npm run vercel-build",
  "outputDirectory": "frontend/.next",
  "framework": "nextjs",
  "installCommand": "npm install && npm install --workspace=frontend",
  "devCommand": "npm run dev:frontend",
  "ignoreCommand": "git diff --quiet HEAD^ HEAD ./frontend/",
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/$1"
    }
  ],
  "env": {
    "NEXT_TELEMETRY_DISABLED": "1"
  },
  "functions": {
    "frontend/src/app/api/**/*.ts": {
      "runtime": "@vercel/node"
    }
  },
  "crons": [],
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "/api/:path*"
    }
  ]
}
